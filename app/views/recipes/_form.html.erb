<%= render 'shared/error_message', obj: @recipe %>

<div class='row'>
  <div class='col-md-6 col-md-offset-3 well'>
      <%= form_for(@recipe, html: { multipart: true}) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
        
        <%= f.label :summary %>
        <%= f.text_field :summary, class: "form-control" %>
        
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control", rows: "6" %>
        <br>
        <span class='picture'>
          <%= f.file_field :picture, accept: 'image/jpg, image/png, image/jpeg, image/gif', class: "form-control" %>
        </span>
        <br>
        <%= f.submit(@recipe.new_record? ? 'Create Recipe':'Edit Recipe', class: "btn btn-success") %>
      <% end %>
  </div>  
</div>

<script>
  $('#recipe_picture').bind('change', function()
  {
    size_in_megabites = this.files[0].size/1024/1024;
    if(size_in_megabites > 5)
    {
      alert('Max file size is 5MB');
    }
  });
</script>