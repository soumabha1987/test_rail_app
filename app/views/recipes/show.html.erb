<h1><%= @recipe.name %></h1>
<div class='row'>
    <h3><%= @recipe.summary %></h3>
    <div class='show_recipe col-md-2'>
      <%= image_tag(@recipe.picture.url, size: '150x120', class: 'gravatar', style: 'border-radius:5px') if @recipe.picture? %>
    </div>
    <div class='col-md-10'>
      <div class='well'>
        <h5>Description: <%= simple_format(@recipe.description) %></h5>
      </div>
      
      <%= gravatar_for @recipe.chef, size:50 %>
      <h5>Brought you by: <%= @recipe.chef.chefname %></h5>
      <div class="pull-right panel panel-default">
        <div class='panel-body'>
          <%= link_to like_recipe_path(@recipe, like: true), method: :post do %>
            <i class="glyphicon glyphicon-thumbs-up"></i> &nbsp <%= @recipe.total_thumbs_up %>
          <% end %>
          &nbsp;
          <%= link_to like_recipe_path(@recipe, like: false), method: :post do %>
            <i class="glyphicon glyphicon-thumbs-down"></i> &nbsp <%= @recipe.total_thumbs_down %>
          <% end %>
        </div>
    </div>
    </div>
  
</div>
<br>
  <div>
    <%= link_to "<< Return to recipe listing", recipes_path, class: "btn btn-warning btn-small" %>
    <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-default btn-small" %>
  </div>
