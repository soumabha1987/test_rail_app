<%= render 'shared/error_message', obj: @chef %>

<div class='row'>
  <div class='col-md-6 col-md-offset-3 well'>
      <%= form_for(@chef, html: { multipart: true}) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :chefname, class: "form-control" %>
        
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
        
        <%= f.label :password %>
        <%= f.text_field :password, class: "form-control" %>
        <br>
        <%= f.submit(@chef.new_record? ? 'Register':'Update', class: "btn btn-success") %>
      <% end %>
  </div>  
</div>